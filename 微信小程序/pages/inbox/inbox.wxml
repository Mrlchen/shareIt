<!--pages/inbox/inbox.wxml-->

<scroll-view scroll-y="true" bindscrolltoupper="bindscrolltoupper" bindscrolltolower="bindscrolltolower" style="height: 100%" >
  <view  wx:for="{{searchresult}}">
   <navigator url="/pages/item_detail/item_detail"><!--这个地方向item_detail传参数第二次访问服务器显示某行item具体信息-->
  <!-- 分割线 -->
  <view class="divLine"></view>
  <!-- 整体item样式 -->
  <view class="containsView">
   <view class="topContainsView">
    <image class="profileImage" src="/image/my.png" /><!--头像-->
    <view class="topRightView">
     <text class="topRightName">{{item.author}} 发布了一条通知</text>  
      <view class="bottomItemView">
     <text class="bottomItemText"> {{item.create_time}}</text> 
     </view> 
    </view>

   </view>
   <!-- 中间内容 -->
   <text class="centerContent">{{item.title}}</text>
   <!-- 底部view样式 -->
   <view class="bottomView">
   <view class="bottomItemView2">

     <text class="bottomItemText">删除</text>

    </view>
   </view>
  </view>
 </navigator>
</view> 
  <view class="divLine"></view>
     <view class="ui-tips">
        <text>—— 没有更多内容了 ——</text>       
    </view>
</scroll-view>

